  <div class="rating-stars-item">
    <div class="form-group radio_buttons required evaluation_rating" id="evaluation_stars">
      <input type="hidden" name="evaluation[rating]" value="">
      <% (1..10).to_a.each_with_index do |number, index| %>
      <span class="radio star_rating_select">
        <label for="evaluation_rating_<%= number %>" id="<%= number %>" class="star-rating-display" data-target=".evaluation_rating">
          <input class="radio_buttons required" type="radio" value=<%= number %> name="evaluation[rating]" id="evaluation_rating_<%= number %>">
          <i class="fa fa-star"></i>
        </label>
      </span>
      <% end %>
    </div>
  </div>
  <div class="orb marged-top-bottom">
    <p id="placeholder">
      0
    </p>
  </div>