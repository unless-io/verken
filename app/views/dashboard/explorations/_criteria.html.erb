<div class="cards-container">
  <div class="cards cards-height">
  <% @criteria = exploration.criteria.paginate(page: params[:page], per_page: 5) %>
   <% @criteria.each do |criterium| %>
   <div class="criterium-card">
    <div class="header">
      <h4>
        <%= criterium.title.upcase %>
      </h4>
      <div class="divider"></div>
    </div>
    <% if criterium.question_type == "star" %>
    <div class="orb">
      <i class="fa fa-star"></i>
    </div>
    <% else %>
    <div class="orb">
      <p>
        1-10
      </p>
    </div>
    <% end %>
  </div>
  <% end %>   
</div>
<%= will_paginate @criteria %>
</div>
