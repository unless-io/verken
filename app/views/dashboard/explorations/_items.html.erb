<div class="cards-container">
  <div class="cards cards-height">
    <% @items = exploration.items.paginate(page: params[:page], per_page: 5) %>
    <% @items.each do |item| %>
    <%= link_to dashboard_exploration_item_path(exploration, item), class: "item-card" do %>
    <% unless item.photo.nil? %>
    <div class="image-container" style="background-image:url('<%= cl_image_path item.photo, width: 100, height: 100, crop: :fill %>');">
    </div>
    <% end %>
    <div class="header">
      <h4>
        <%= item.title %>
      </h4>
      <div class="divider"></div>
      <div class="info">
        <%= item.description %>
      </div>
    </div>
    <div class="orb">
      <p>
        <%= item.score.round(1) %>
      </p>
    </div>
    <% end %>
    <% end %>
  </div>
  <%= will_paginate @items %>
</div>
